<h1>Listing tweets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_id %></td>
        
        <td><%= tweet.content %></td>
        <td><%= time_ago_in_words tweet.created_at%> ago</td> 
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) if @current_user.try(:id) == tweet.user_id%></td>
        <td><%= link_to 'delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.try(:id) == tweet.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
