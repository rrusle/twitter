<div class='alluser'>

      <h1>THIS IS USERS INDEX</h1>

    <% @users.each do |user| %>
      <ul>

      <li><%= user.name %></li>

      <li><%= link_to 'Show', user %></li>
      
      <li>
      	<%= link_to 'Edit', edit_user_path(user) if @current_user.try(:id) == user.id %>
      </li>
      <li>
      	<%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.try(:id) == user.id %>
      </li>
      
      </ul>
	<%end%>
</div>
